<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sellLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvSellTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập hàng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Nút Quét QR Code -->
        <ImageButton
            android:id="@+id/btnScanQR"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quét QR Code"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />


        <!-- EditText Mã Sản Phẩm -->
        <EditText
            android:id="@+id/etProductCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Sản Phẩm"
            android:inputType="text"
            android:enabled="false"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- EditText Tên Sản Phẩm -->
        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Sản Phẩm"
            android:inputType="text"
            android:enabled="false"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- EditText Giá Tiền -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá Tiền"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- EditText Số Lượng -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Lượng"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Nút hoàn thành giao dịch -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:padding="12dp" />
        <!-- Nút quay trở lại -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:padding="12dp" />
        <!-- List sản phẩm-->
        <ListView
            android:id="@+id/lvProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
        <!-- Nút hoàn thành giao dịch -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hoàn thành giao dịch"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
